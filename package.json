{
  "name": "serverless-template",
  "version": "1.0.0",
  "description": "",
  "main": "handler.js",
  
  "devDependencies": {
    "@babel/plugin-transform-runtime": "^7.13.10",
    "@babel/preset-env": "^7.13.10",
    "@typescript-eslint/eslint-plugin": "^4.17.0",
    "@typescript-eslint/parser": "^4.17.0",
    "aws-sdk": "^2.864.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.2.2",
    "eslint": "^7.22.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.22.1",
    "file-loader": "^6.2.0",
    "jest": "^26.6.3",
    "serverless-offline": "^6.8.0",
    "serverless-offline-scheduler": "^0.4.2",
    "serverless-offline-sns": "^0.68.0",
    "serverless-offline-sqs": "^4.1.1",
    "serverless-plugin-scripts": "^1.0.2",
    "serverless-plugin-typescript": "^1.1.9",
    "serverless-s3-local": "^0.6.7",
    "serverless-webpack": "^5.3.5",
    "webpack": "^5.25.0",
    "webpack-node-externals": "^2.5.2"
  },

  "scripts": {
    "workspaces": "npm run --workspaces -- ",    
    "wipe": "sudo rm -rf .serverless/ .webpack/ .mongodb-storage/ .mysql-storage/ .redis-storage/ .s3-local/",    

    "docker": "${npm_package_config_ALIAS_DOCKER_COMPOSE}",
    "docker:up": "${npm_package_config_ALIAS_DOCKER_COMPOSE} up --detach",
    "docker:clean:up": "${npm_package_config_ALIAS_DOCKER_COMPOSE} up --detach --build --force-recreate --always-recreate-deps",
    "docker:down": "${npm_package_config_ALIAS_DOCKER_COMPOSE} down",
    "postdocker:down": "npm run wipe",
    "docker:clean:down": "${npm_package_config_ALIAS_DOCKER_COMPOSE} down --rmi all --volumes --remove-orphans",
    "postdocker:clean:down": "npm run wipe",    
    "docker:sh": "${npm_package_config_ALIAS_DOCKER_COMPOSE} exec --privileged ${npm_package_config_ALIAS_DOCKER_COMPOSE_SERVICE} bash",
    "docker:bash": "${npm_package_config_ALIAS_DOCKER_COMPOSE} exec --privileged ${npm_package_config_ALIAS_DOCKER_COMPOSE_SERVICE} bash"    
  },
  "config": {
    "ALIAS": {
      "DOCKER_COMPOSE": "docker-compose --file ./docker-compose.yml",
      "DOCKER_COMPOSE_SERVICE": "serverless-container"
    }
  },
  "workspaces": [
    "./services/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/esteveslima/serverless-template.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/esteveslima/serverless-template/issues"
  },
  "homepage": "https://github.com/esteveslima/serverless-template#readme"
}
