// Configuration to attach vscode debugger to sls offline server

{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Host Serverless Offline",
            "type": "node",
            "request": "attach",            
            "protocol": "inspector",
            "restart": true,
            "processId": "${command:PickProcess}",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/.webpack/**/*.js"
            ],            
            "address": "localhost",
            "port": 4000,                                    // sls offline plugin port            
        }
    ]
}


// Not working from docker container, only from host machine. Also, with webpack breakpoint can be added only in bundled files

// References:
// https://github.com/serverless-heaven/serverless-webpack/blob/master/README.md#vscode-debugging
