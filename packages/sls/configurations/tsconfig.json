// default typescript config, can be extended on service's files

{
    "compilerOptions": {
      // "rootDir": "./src/",
      // "outDir": "./dist/", // not emitting out files
      // "module": "CommonJS", // "es6",
      "target": "ES2020", // "esnext",
      "lib": ["es2015"],
      "moduleResolution": "node",
      "allowJs": true,
      "strict": true, // strict syntax
      "sourceMap": true,
      "noEmit": true, // do not generate js files
      "noEmitOnError": true,          
      "isolatedModules": true, // Ensure that Babel can safely transpile files in the TypeScript project

      // "typeRoots": [
      //   "**/node_modules/@types",
      //   "**/@types"
      // ]
    }
}